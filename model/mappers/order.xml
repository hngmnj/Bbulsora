<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.order">
	<resultMap id="ordResult" type="orderVO">
		<id property="orderSeq" column="order_seq" />
		<result property="orderCd" column="order_cd" />
		<result property="orderQtt" column="order_qtt" />
		<result property="submitDate" column="submit_date" />
		<result property="toDate" column="to_date" />
		<result property="compCd" column="comp_cd" />
		<result property="itemCd" column="item_cd" />
		<result property="stateCd" column="state_cd" />

	</resultMap>

	<select id="selectAllOrderList" resultMap="ordResult">
      <![CDATA[
         select * from order_t
      ]]>
	</select>

	<select id="selectOrderByClient" resultMap="ordResult">
      <![CDATA[
         select * from order_t
         where
         comp_cd like 'CLI%'			
      ]]>
	</select>

	<select id="selectOrderByCompCd" resultMap="ordResult"
		parameterType="String">
      <![CDATA[
         select * from order_t
         where
         comp_cd=#{compCd}	
      ]]>
	</select>

	<select id="selectOrderByItemCd" resultMap="ordResult"
		parameterType="String">
      <![CDATA[
         select * from order_t
         where
         item_cd=#{itemCd}	
      ]]>
	</select>

	<select id="selectOrderByStateCd" resultMap="ordResult"
		parameterType="String">
      <![CDATA[
         select * from order_t
         where
         state_cd=#{stateCd}	
      ]]>
	</select>

	<select id="selectOrderByOrderCd" resultMap="ordResult"
		parameterType="String">
      <![CDATA[
         select * from order_t
         where
         order_cd=#{orderCd}			
      ]]>
	</select>

	<select id="selectOrderByDate" resultMap="ordResult"
		parameterType="map">
	  <![CDATA[
         select * from order_t
         where
         order_date >= #{fromDate}
         and
         order_date <= #{toDate}
      ]]>
	</select>

	<insert id="insertOrder" parameterType="orderVO">
		<![CDATA[
		 insert into order_t(order_cd, order_qtt, submit_date, order_date, comp_cd, item_cd, state_cd)
		 values(#{orderCd}, #{orderQtt}, #{submitDate}, #{orderDate}, #{compCd}, #{itemCd}, #{stateCd})
		]]>
	</insert>

	<update id="updateOrderState" parameterType="orderVO">
     <![CDATA[
	     update order_t
	     set state_cd=#{stateCd}
	     where
	     order_seq=#{orderSeq}
      ]]>
	</update>

	<delete id="deleteOrder" parameterType="String">
	<![CDATA[
	   delete from order_t
	   where
	   order_cd=#{orderCd}	
	]]>
	</delete>

</mapper>