<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.employee">
	<resultMap id="empResult" type="employeeVO">
		<result property="empNo" column="emp_no" />
        <result property="name" column="name" />
        <result property="birthDate" column="birth_date" />
        <result property="phoneNum" column="phone_num" />
        <result property="email" column="email" />
        <result property="gender" column="gender" />
        <result property="address" column="address" />
        <result property="postNum" column="post_num" />
        <result property="regiNum" column="regi_num" />
        <result property="deptmt" column="deptmt" />
        <result property="position" column="position" />
        <result property="startDate" column="start_date" />
        <result property="endDate" column="end_date" />
	</resultMap> 
	

	<select id="selectAllEmployeeList" resultMap="empResult">
      <![CDATA[
         select * from employee 	
      ]]>
	</select>
	
	<select id="selectMemberByEmpNo" resultType="employeeVO"  parameterType="int" >
      <![CDATA[
         select * from employee
         where
         emp_no=#{empNo}			
      ]]>
	 </select>	

    <insert id="insertEmployee"  parameterType="employeeVO">
		<![CDATA[
		insert into employee(emp_no, name, birth_date, phone_num, email, gender, address, 
		post_num, regi_num, deptmt, position, start_date)
		values
		(#{empNo}, #{name}, #{birthDate}, #{phoneNum}, #{email}, #{gender}, #{address}, 
		#{postNum}, #{regiNum}, #{deptmt}, #{position}, #{startDate} );  
		]]>      
	</insert>
	
	<update id="updateEmployee"  parameterType="employeeVO">
     <![CDATA[
	     update employee
	     set
	     name=#{name}, birth_date=#{birthDate}, phone_num=#{phoneNum}, email=#{email}, gender=#{gender}, address=#{address}, 
		 post_num=#{postNum}, regi_num=#{regiNum}, deptmt=#{deptmt}, position=#{position}, start_date=#{startDate} 
	     where
	     emp_no=#{emptNo}
      ]]>      
   </update> 
     
   <delete id="deleteEmployee"  parameterType="int">
	<![CDATA[
	   delete from  employee
	   where
	   emp_no=#{emptNo}
	]]>      
  </delete>
</mapper>