<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.state">
	<resultMap id="stateResult" type="stateVO">
		<id property="stateCd" column="state_cd" />
		<result property="stateContent" column="state_content" />
	</resultMap>

	<select id="selectAllStateList" resultMap="stateResult">
      <![CDATA[
         select * from state
      ]]>
	</select>

	<select id="selectStateByStateCd" resultMap="stateResult"
		parameterType="String">
      <![CDATA[
         select * from state
         where
         state_cd=#{stateCd}			
      ]]>
	</select>

	<insert id="insertState" parameterType="stateVO">
		<![CDATA[
		 insert into state
		 values(#{stateCd}, #{stateContent})
		]]>
	</insert>

	<update id="updateState" parameterType="stateVO">
     <![CDATA[
	     update state
	     set state_content=#{stateContent}
	     where
	     state_cd=#{stateCd}
      ]]>
	</update>

	<delete id="deleteState" parameterType="String">
	<![CDATA[
	   delete from state
	   where
	   state_cd=#{stateCd}	
	]]>
	</delete>


</mapper>